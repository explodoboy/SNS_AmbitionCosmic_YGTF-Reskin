<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Vanilla Achievements Expanded</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationFindMod">
			<mods>
				<li>Science Never Stops: Ambition of the Cosmic</li>
			</mods>
			<match Class="PatchOperationSequence">
				<operations>
					
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_CraftCount_StableMatter_I"]/description</xpath>
						<value>
							<description>Draw Stalwart Fabric in the Dystopia Device.</description>
						</value>
					</li>
					
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_ItemCount_StableMatter_I"]/description</xpath>
						<value>
							<description>Obtain any amount of Stalwart Fabric by any means.</description>
						</value>
					</li>
					
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_ItemCount_StableMatter_II"]/description</xpath>
						<value>
							<description>Stockpile a thousand units of Stalwart Fabric by any means.</description>
						</value>
					</li>
					
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_ItemCount_StableMatter_III"]/description</xpath>
						<value>
							<description>Stockpile ten-thousand units of Stalwart Fabric by any means.</description>
						</value>
					</li>
					
				</operations>
			</match>
			</li>
		</operations>
	</match>
</Operation>

</Patch>