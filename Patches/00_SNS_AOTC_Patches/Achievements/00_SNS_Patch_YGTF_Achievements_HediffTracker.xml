<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Vanilla Achievements Expanded</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationFindMod">
			<mods>
				<li>Science Never Stops: Ambition of the Cosmic</li>
			</mods>
			<match Class="PatchOperationSequence">
				<operations>
					
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_HediffTracker_BionicsFull_GenI"]/description</xpath>
						<value>
							<description>Have a single pawn with full Generation-1 entropic bionics, armor shrouds, and enchanters.</description>
						</value>
					</li>
					
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_HediffTracker_BionicsFull_GenII"]/description</xpath>
						<value>
							<description>Have a single pawn with full Generation-2 abyssal bionics, armor shrouds, and enchanters.</description>
						</value>
					</li>
					
				</operations>
			</match>
			</li>
		</operations>
	</match>
</Operation>

</Patch>