<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Science Never Stops: Ambition of the Cosmic</li>
    </mods>
	<match Class="PatchOperationSequence"> 
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_Bullet_Cosmic"]/label</xpath>
				<value>
					<label>cosmic turret projectile</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_Cosmic"]/label</xpath>
				<value>
					<label>abyssal turret gun</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_Cosmic"]/description</xpath>
				<value>
					<description>The gun of an abyssal turret.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_Cosmic"]/label</xpath>
				<value>
					<label>abyssal turret</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_Cosmic"]/description</xpath>
				<value>
					<description>A heavy automatic turret. Fires like a minigun, spewing its reserves at whatever crosses its path without remorse. Requires a large amount of Plasteel to refurbish its barrels after heavy use.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_PerditionCosmic"]/label</xpath>
				<value>
					<label>perdition abyssal turret gun</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_PerditionCosmic"]/description</xpath>
				<value>
					<description>The gun of a perdition abyssal turret.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_PerditionCosmic"]/label</xpath>
				<value>
					<label>perdition abyssal turret</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_PerditionCosmic"]/description</xpath>
				<value>
					<description>A heavy automatic turret. Fires like at a rapid pace, spewing its reserves at whatever crosses its path without remorse or cooldown. Requires a large amount of Plasteel to refurbish its barrels after heavy use.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_EternalCosmic"]/label</xpath>
				<value>
					<label>eternal abyssal turret gun</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_EternalCosmic"]/description</xpath>
				<value>
					<description>The gun of an eternal abyssal turret.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_EternalCosmic"]/label</xpath>
				<value>
					<label>eternal abyssal turret</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_EternalCosmic"]/description</xpath>
				<value>
					<description>A heavy automatic turret. Fires like a minigun, spewing its reserves at whatever crosses its path without remorse. It does not need refurbishment or refueling, ever, nor can it break down.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_EternalPerditionCosmic"]/label</xpath>
				<value>
					<label>eternal perdition abyssal turret gun</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Gun_Turret_EternalPerditionCosmic"]/description</xpath>
				<value>
					<description>The gun of an eternal perdition abyssal turret.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_EternalPerditionCosmic"]/label</xpath>
				<value>
					<label>eternal perdition abyssal turret</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SNS_Turret_EternalPerditionCosmic"]/description</xpath>
				<value>
					<description>A heavy automatic turret. Fires like at a rapid pace, spewing its reserves at whatever crosses its path without remorse or cooldown. It does not require refurbishment or refueling, ever, nor can it break down.</description>
				</value>
			</li>
		</operations>
	</match>
</Operation>

</Patch>